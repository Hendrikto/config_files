# Documentation: `man 8 mkinitcpio`

ALL_kver='/boot/vmlinuz-linux'

PRESETS=('default' 'fallback')

default_uki='/boot/EFI/Linux/arch-linux.efi'
default_options='--no-cmdline --splash /usr/share/systemd/bootctl/splash-arch.bmp'

fallback_uki='/boot/EFI/Linux/arch-linux-fallback.efi'
fallback_options='--no-cmdline --skiphooks autodetect'
